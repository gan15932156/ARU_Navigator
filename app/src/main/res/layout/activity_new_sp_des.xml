<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Activities.NewSpDesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เพิ่มข้อมูลเฉพาะอาคาร สถานที่"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_sp_des_textlayout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:textColor="@color/black">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_sp_des_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ชื่ออาคาร"
            android:inputType="text"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_sp_des_textlayout_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:textColor="@color/black">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_sp_des_edit_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="รายละเอียดเฉพาะ"
            android:inputType="text"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/new_sp_des_btn_send"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:background="@color/cyan"
        android:text="ส่ง"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/new_sp_des_btn_back"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:background="@color/yellow"
        android:text="ย้อนกลับ"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>
</LinearLayout>